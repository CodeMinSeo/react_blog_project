<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitc.fullstack503.team1_server.mapper.BoardMapper">
<!-- 파라미터가 없는 GET 방식 통신 (전체 검색) -->
    <select id="selectBoardList" resultType="bitc.fullstack503.team1_server.dto.BoardDTO">
        SELECT
            board_idx, title, create_id, create_date, update_date, hit_cnt
        FROM
            board
        WHERE
            deleted_yn = 'Y'
        order by board_idx desc;
    </select>

<!-- 파라미터가 있는 GET 방식 통신 (선택 검색) -->
    <select id="selectBoardDetail" parameterType="int" resultType="bitc.fullstack503.team1_server.dto.BoardDTO">
        SELECT
            *
        FROM
            board
        WHERE
            board_idx = #{boardIdx}
    </select>

<!-- 파라미터가 있는 POST 통신 방식 (추가)   -->
    <insert id="insertBoard" parameterType="bitc.fullstack503.team1_server.dto.BoardDTO">
        INSERT INTO board (title, contents, create_id, create_date, deleted_yn)
            VALUE (#{title}, #{contents}, #{createId}, now(), 'Y')
    </insert>

    <update id="updateBoard" parameterType="bitc.fullstack503.team1_server.dto.BoardDTO">
        UPDATE board
        SET title = #{title}, contents = #{contents}
        WHERE board_idx = #{boardIdx}
    </update>

    <delete id="deleteBoard" parameterType="bitc.fullstack503.team1_server.dto.BoardDTO">
        DELETE FROM board WHERE board_idx = #{boardIdx}
    </delete>
</mapper>